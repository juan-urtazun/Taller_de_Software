{% extends '::backend.html.twig' %}
{% block id 'tipodecargo' %}
{% block titulo %}
    <h1>Listado de Tipos de Cargos</h1>
{% endblock %}
{% block contenido %}
<div class="divinterna">   
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Duraci&oacute;n</th>
                <th>Nombre</th>
                <th>C&oacute;digo</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="{{ cycle(['GrillaRow','GrillaRowAlt'],loop.index) }}">
                <td><a href="{{ path('tipocargo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.duracion }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.codigo }}</td>
                <td valign="middle" align="center" style="width:30px;">
                    <a href="{{ path('tipocargo_edit', { 'id': entity.id }) }}">
                        <img src="{{ asset('images/btn/btn32/edit_item.png') }}" alt="Editar" />
                    </a>
                </td>
                <td valign="middle" align="center" style="width:30px;">
                    <a href="#"><img src="{{ asset('images/btn/btn32/delete_item.png') }}" alt="Eliminar" /></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <table>
        <tr>
            <td class="tdcuerpomargen">
                <a class="btnOficinaNew" href="{{ path('tipocargo_new') }}">
                </a>
            </td>
        </tr>
    </table>
</div>
{% endblock %}
