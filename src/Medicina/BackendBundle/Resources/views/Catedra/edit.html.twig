{% extends '::backend.html.twig' %}
{% block id 'oficina' %}
{% block article %}
<form action="{{ path('backend_catedra_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <table class="tablaprincipal">
    <tr class="trtitulopagina">
        <td colspan="3">
            <div>
               {% block title %}Editar Oficina{% endblock %}
            </div>
        </td>
    </tr>
    <tr>
        <td class="tdcuerpo">
            <table class="componentes">
                {% for child in edit_form.children %}
                    {% if "hidden" not in child.vars.types %}
                    <tr>
                        <!-- Nombre -->
                        <td class="col1">
                        </td>
                        <td class="col2">
                           {{ form_label(child) }}
                        </td>
                        <td class="col3">
                            {{ form_widget(child) }}
                        </td>
                        <td class="col4">
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}                
            </table>
        </td>
    </tr>
    <tr class="trbotones">
        <td style="padding-left: 20px;">
            <button class="btnaceptar" type="submit"></button>
            <a class="btncancelar" href="{{ path('backend_catedra') }}"></a>
        </td>
    </tr>
</table>
</form>
{% endblock %}
