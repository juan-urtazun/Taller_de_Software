{% extends '::backend.html.twig' %}
{% block id 'oficina' %}
{% block article %}
<table class="tablaprincipal">
    <tr class="trtitulopagina">
        <td colspan="3">
            <div>
               {% block title %}Listado de oficinas{% endblock %}
            </div>
        </td>
    </tr>
    <tr>
        <td class="tdcuerpomargen"> 
            <table class="GrillaNormal"
                   <thead>
                    <tr class="GrillaHead">
                        <th class="thLeft" scope="col">Nombre</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                {% for oficina in entities %}
                    <tr class="{{ cycle(['GrillaRow','GrillaRowAlt'],loop.index) }}">
                        <td>{{ oficina.nombre }}</td>           
                        <td valign="middle" align="center" style="width:30px;">
                            <a href="{{ path('backend_catedra_edit', { 'id': oficina.id }) }}">
                                <img src="{{ asset('images/btn/btn32/edit_item.png') }}" alt="Editar" />
                            </a>
                        </td>
                        <td valign="middle" align="center" style="width:30px;">
                            <a href="#"><img src="{{ asset('images/btn/btn32/delete_item.png') }}" alt="Eliminar" /></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table> 
        </td>
        <tr>
            <td class="tdcuerpomargen">
                <a class="btnOficinaNew" href="{{ path('backend_catedra_new') }}">
                </a>
            </td>
        </tr>
    </tr>
</table>


{% endblock %}